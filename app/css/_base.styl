@import 'jeet'


// COLORS

dark_bg = #252C33;
dark_blue = #33526F;
medium_blue = #2BB4E1;
light_blue = #63C7EA;
button_blue = #28A6DB;



html, body
  edit()
  border 0
  margin 0
  width 100%
  height 100%
  font-size 16px
  font-family 'Titillium Web', arial, sans-serif;
  font-weight normal
  color white

img
  max-width 100%


a
  color light_blue

button.btn
  background button_blue
  border-radius 3px
  border 0
  color white
  padding 6px 20px


h1, h2
  text-transform uppercase
